<UserControl x:Class="EasySaveV2.MVVM.Views.SettingsViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySaveV2.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="344" d:DesignWidth="604">
    <Grid>
        <Grid HorizontalAlignment="Center">
            <Label Content="Settings" Margin="20" FontSize ="30" Style="{DynamicResource TextSetting}" HorizontalAlignment="Center" Grid.Row="1"/>
        </Grid>
        <Grid>
            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="300">
                <StackPanel Height="190">
                    <Label Content="Format"  FontSize ="25" Style="{DynamicResource TextSetting}" HorizontalAlignment="Center" Grid.Row="1"/>
                    <ToggleButton Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="64" Height="35" Style="{DynamicResource ToggleButtonStyle}" />
                </StackPanel>
            </DockPanel>
            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="300">
                <StackPanel Height="190">
                    <Label Content="Language"  FontSize ="25" Style="{DynamicResource TextSetting}" HorizontalAlignment="Center" Grid.Row="1"/>
                    <ToggleButton Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="64" Height="35" Style="{DynamicResource ToggleButtonStyle}" />
                </StackPanel>
            </DockPanel>
        </Grid>
        <Label Content="EN" FontSize="18" Style="{DynamicResource TextSetting}" Margin="378,130,195,184"/>
        <Label Content="FR" FontSize="18" Style="{DynamicResource TextSetting}" Margin="502,130,71,184"/>
        <Label Content="JSON" FontSize="18" Style="{DynamicResource TextSetting}" Margin="53,130,502,184"/>
        <Label Content="XML" FontSize="18" Style="{DynamicResource TextSetting}" Margin="204,130,352,184"/>
    </Grid>
</UserControl>
